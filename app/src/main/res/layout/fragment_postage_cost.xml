        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp" />-->
       <!-- android:text="Result"/>-->

    <!-- Rect Browse -->
    <View
        android:id="@+id/rect_browse"
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/rect_postage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp" />

    <!-- POSTAGE SERVICE -->
    <TextView
        android:id="@+id/postage_ser"
        android:layout_width="216dp"
        android:layout_height="33dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="411dp"
        android:text="@string/postage_ser"
        android:textAppearance="@style/postage_ser"
        android:background="@drawable/postage_ser_button"
        android:gravity="center_horizontal|center_vertical" />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_marginTop="263dp"
        android:contentDescription="@string/qr_code"
        app:srcCompat="@drawable/qr_code" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="180dp"
        app:srcCompat="@android:drawable/arrow_down_float" />


</RelativeLayout>