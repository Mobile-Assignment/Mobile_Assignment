<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrackTraceList">

    <!-- REFERENCE ID -->
    <TextView
        android:id="@+id/reference_id"
        android:layout_width="360dp"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="51dp"
        android:text="@string/reference_id"
        android:textAppearance="@style/track_"
        android:background="@drawable/reference_id"
        android:gravity="center_horizontal|center_vertical"
        />

    <!-- DATE/TIME -->
    <TextView
        android:id="@+id/date_time"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="174dp"
        android:text="@string/date_time"
        android:textAppearance="@style/recipient_name"
        android:background="@drawable/table_send"
        android:gravity="center_horizontal|center_vertical"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp" />

    <!-- PROCESS -->
    <TextView
        android:id="@+id/process"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="128dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="174dp"
        android:text="@string/process"
        android:textAppearance="@style/recipient_name"
        android:background="@drawable/table_recipient"
        android:gravity="center_horizontal|center_vertical"
        android:layout_alignParentStart="true"
        android:layout_marginStart="128dp" />

    <!-- LOCATION -->
    <TextView
        android:id="@+id/location"
        android:layout_width="139dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="267dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="174dp"
        android:text="@string/process"
        android:textAppearance="@style/recipient_name"
        android:background="@drawable/table_recipient"
        android:gravity="center_horizontal|center_vertical"
        android:layout_alignParentStart="true"
        android:layout_marginStart="267dp" />

    <!-- Table 4 -->
    <View
        android:id="@+id/table_date_time"
        android:layout_width="125dp"
        android:layout_height="347dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="223dp"
        android:background="@drawable/table_list" />

    <!-- Table 5 -->
    <View
        android:id="@+id/table_process"
        android:layout_width="140dp"
        android:layout_height="347dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="128dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="223dp"
        android:background="@drawable/table_list"
        android:layout_alignParentStart="true"
        android:layout_marginStart="128dp" />



    <!-- Table 3 -->
    <View
        android:id="@+id/table_location"
        android:layout_width="139dp"
        android:layout_height="347dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="267dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="223dp"
        android:background="@drawable/table_list"
        android:layout_alignParentStart="true"
        android:layout_marginStart="267dp" />

</RelativeLayout>